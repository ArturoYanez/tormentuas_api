# ============================================
# Tormentus Trading Platform - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!
# ============================================

# ============================================
# Server Configuration
# ============================================
SERVER_PORT=8080
SERVER_HOST=localhost
SERVER_ENV=development

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=tormentus_user
DB_PASSWORD=tormentus_password
DB_NAME=tormentus_dev
DB_SSLMODE=disable
DB_MAX_CONNECTIONS=25
DB_MAX_IDLE_CONNECTIONS=5

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=168h

# ============================================
# CORS Configuration
# ============================================
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# ============================================
# Frontend Configuration
# ============================================
FRONTEND_URL=http://localhost:5173
VITE_API_URL=http://localhost:8080/api

# ============================================
# WebSocket Configuration
# ============================================
WS_HEARTBEAT_INTERVAL=30s
WS_READ_BUFFER_SIZE=1024
WS_WRITE_BUFFER_SIZE=1024

# ============================================
# Trading Configuration
# ============================================
TRADING_PRICE_UPDATE_INTERVAL=500ms
TRADING_CLEANUP_INTERVAL=1h
TRADING_WIN_RATE=0.20
TRADING_MANIPULATION_ENABLED=true

# ============================================
# Email Configuration (Optional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@tormentus.com

# ============================================
# Redis Configuration (Optional - for sessions/cache)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# File Upload Configuration
# ============================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/jpg,application/pdf
UPLOAD_PATH=./uploads

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# ============================================
# Security Configuration
# ============================================
BCRYPT_COST=10
SESSION_TIMEOUT=24h
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=15m

# ============================================
# Rate Limiting (Optional)
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# ============================================
# External APIs (Optional)
# ============================================
# Binance API
BINANCE_API_KEY=
BINANCE_API_SECRET=

# CoinGecko API
COINGECKO_API_KEY=

# ============================================
# Payment Providers (Optional)
# ============================================
# Stripe
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# PayPal
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox

# ============================================
# Monitoring & Analytics (Optional)
# ============================================
# Sentry
SENTRY_DSN=

# Google Analytics
GA_TRACKING_ID=

# ============================================
# Feature Flags
# ============================================
FEATURE_2FA_ENABLED=true
FEATURE_KYC_REQUIRED=true
FEATURE_TOURNAMENTS_ENABLED=true
FEATURE_REFERRALS_ENABLED=true
FEATURE_ACADEMY_ENABLED=true
FEATURE_LIVE_CHAT_ENABLED=true

# ============================================
# Development Only
# ============================================
DEBUG=false
ENABLE_PROFILING=false
ENABLE_SWAGGER=true
